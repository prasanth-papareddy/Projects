@model  IEnumerable<Project>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Project Id</th>
                    <th>Name</th>
                    <th>Actions</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr class="text-center">
                        <td>@p.Id</td>
                        <td>@p.Name</td>
                        <td><a asp-controller="Project" asp-action="Update" asp-route-Id="@p.Id" class="btn btn-outline-primary"><i class="fas fa-edit">Edit</i></a>
                        <a asp-controller="Project" asp-action="Delete" asp-route-Id="@p.Id" class="btn btn-outline-danger"><i class="far fa-trash-alt">Delete</i></a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Project" asp-action="Create"  class="btn btn-outline-success">Create</a>
    </div>
    <div class="col-sm-3"></div>
</div>