@model EmployeeManagement.ViewModels.EmployeeCreateViewModel

<br />
<br />

<form asp-controller="Employee" asp-action="Create" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="EmailId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EmailId" class="form-control" />
            <span asp-validation-for="EmailId" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Department" asp-items="@Model.Departments.Select(d => new
           SelectListItem()
             {
                 Value = d.DepartmentId.ToString(),
                 Text = d.DepartmentName.ToString()
             })" class="form-select">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="Role" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Role" asp-items="@Model.Roles.Select(d => new
           SelectListItem()
             {
                 Value = d.RoleId.ToString(),
                 Text = d.Name.ToString()
             })" class="form-select">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
    </div>
    <br/>
    <button type="submit" class="btn btn-outline-primary">Create</button>
    <a asp-controller="Employee" asp-action="GetEmployees" class="btn btn-outline-secondary">Back</a>
</form>
