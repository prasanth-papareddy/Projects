@model EmployeeManagement.ViewModels.EmployeeCreateViewModel;
@using EmployeeManagement.Models;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOC
<html>
<head>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <form asp-controller="Employee" asp-action="Create" method="post">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="EmailId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="EmailId" class="form-control" />
                            <span asp-validation-for="EmailId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Gender" class="col-sm-2"></label>
                        <div class="col-sm-10">
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="custom-select mr-sm-2"></select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary"></button>


                </form>
            </div>
        </div>
    </div>
</body>
</html>