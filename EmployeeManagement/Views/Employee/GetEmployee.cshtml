@model EmployeeManagement.Models.Employee


<div class="card border border-success shadow-0 mb-3" style="max-width: 18rem;">
    <div class="card-header bg-transparent border-success"><h5 class="card-title">Employee Details</h5></div>
    <div class="card-body text-success">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
           EmailId: @Model.EmailId
        </p>
        <p class="card-text">
            Gender: @Model.Gender
        </p>
        <p class="card-text">
            Created On: @Model.Created
        </p>
        
    </div>
    <div class="card-footer bg-transparent border-success">
        <a asp-controller="Employee" asp-action="Update" asp-route-Id="@Model.Id" class="btn btn-outline-primary">Edit</a>
        <a asp-controller="Employee" asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-outline-danger m-1">Delete</a>
        <a asp-controller="Employee" asp-action="GetEmployees" class="btn btn-outline-secondary">Back</a>
    </div>
</div>