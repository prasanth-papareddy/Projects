@model EmployeeManagement.Models.Employee;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<br/><br/>
     <form asp-controller="Employee" asp-action="Update" method="post">
         <div class="form-group row">
             <label asp-for="Name" class="col-sm-2 col-form-label"></label>
             <div class="col-sm-10">
                 <input asp-for="Name" class="form-control" />
                 <span asp-validation-for="Name" class="text-danger"></span>
             </div>
         </div>
         <br />
         <div class="form-group row">
             <label asp-for="EmailId" class="col-sm-2 col-form-label"></label>
             <div class="col-sm-10">
                 <input asp-for="EmailId" class="form-control" />
                 <span asp-validation-for="EmailId" class="text-danger"></span>
             </div>
         </div>
         <br />
         <div class="form-group row">
             <label asp-for="Gender" class="col-sm-2"></label>
             <div class="col-sm-10">
                 <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                     <option value="">Select</option>
                 </select>
                 <span asp-validation-for="Gender" class="text-danger"></span>
             </div>
         </div>
         <br /><br/>
         <button type="submit" class="btn btn-outline-primary">Update</button>
         <a asp-controller="Employee" asp-action="List" class="btn btn-outline-secondary">Back</a>

     </form>
