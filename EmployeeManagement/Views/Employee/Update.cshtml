@model EmployeeManagement.ViewModels.UpdateEmployeeViewModel

<br />
<br />
<form asp-controller="Employee" asp-action="Update" method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="EmailId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EmailId" class="form-control" />
            <span asp-validation-for="EmailId" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                <option value="">Select</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <br/>
    <div class="form-group row">
        <label asp-for="DepartmentId" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="DepartmentId" asp-items="@Model.Departments.Select(d => new
            SelectListItem()
           {
               Text = d.DepartmentName.ToString(),
               Value = d.DepartmentId.ToString()
           });" class="form-select"><option value="">Select</option></select>
        </div>
    </div>
    <br/>
    <div class="form-group row">
        <label asp-for="RoleId" class="col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="RoleId" asp-items="@Model.Roles.Select(r => new SelectListItem()
             {
                 Value = r.RoleId.ToString(),
                 Text = r.Name.ToString()
             });" class="form-select"><option value="">Select</option></select>
        </div>
    </div>
    <br /><br />
    <button type="submit" class="btn btn-outline-primary">Update</button>
    <a asp-controller="Employee" asp-action="GetEmployees" class="btn btn-outline-secondary">Back</a>

</form>
