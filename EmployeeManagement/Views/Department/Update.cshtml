@model Department

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 align-content-center">
       
        <form asp-controller="Department" asp-action="Update" method="post">
            <div class="form-group row" style="display:none">
                <label asp-for="DepartmentId" class="col-sm-5 col-form-label"></label>
                <div class="col-sm-7">
                    <input asp-for="DepartmentId" class="form-control"  />
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="form-group row">
                <label asp-for="DepartmentName" class="col-sm-5 col-form-label"></label>
                <div class="col-sm-7">
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-outline-primary">Update</button>
            <a asp-action="GetDepartments" asp-controller="Department" class="btn btn-secondary">Back</a>
        </form>
            </div>
     
    <div class="col-sm-3"></div>
</div>