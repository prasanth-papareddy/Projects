@model  IEnumerable<Department>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Department Id</th>
                    <th>Department Name</th>
                    <th>Actions</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.DepartmentId</td>
                        <td>@d.DepartmentName</td>
                        <td><a asp-controller="Department" asp-action="Update" asp-route-DepartmentId="@d.DepartmentId" class="btn btn-outline-primary"><i class="fas fa-edit">Edit</i></a>
                        <a asp-controller="Department" asp-action="Delete" asp-route-DepartmentId="@d.DepartmentId" class="btn btn-outline-danger"><i class="far fa-trash-alt">Delete</i></a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Department" asp-action="Create"  class="btn btn-outline-success">Create</a>
    </div>
    <div class="col-sm-3"></div>
</div>