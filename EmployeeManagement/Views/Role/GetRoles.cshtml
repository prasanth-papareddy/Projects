@model  IEnumerable<EmployeeManagement.Models.Role>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <table class="table table-striped table-bordered">
            <thead>
                <tr class="text-center">
                    <th>Role Id</th>
                    <th>Role Name</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.RoleId</td>
                        <td>@d.Name</td>
                        <td><a asp-controller="Role" asp-action="Update" asp-route-RoleId="@d.RoleId" class="btn btn-outline-primary">Update</a></td>
                        <td><a asp-controller="Role" asp-action="Delete" asp-route-RoleId="@d.RoleId" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Role" asp-action="Create"  class="btn btn-outline-success">Create</a>
    </div>
    <div class="col-sm-3"></div>
</div>