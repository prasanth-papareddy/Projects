<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <link href="~/bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    @using Microsoft.AspNetCore.Identity    
    @inject SignInManager<IdentityUser>  signInManager 
</head>
<body>
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-sm  navbar-dark" style="background-color:black;">
            <a class="navbar-brand" asp-action="GetEmployees" asp-controller="Employee">
                <img src="~/Images/ProfileImage.png" style="width:65px;height:65px" />
            </a>
            <button class="navbar-toggler" data-toggle="collapse" type="button" data-target="#CollapseMenuBar">
                <span class="navbar navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="CollapseMenuBar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" style="font-size:28px; font-family:'sans-serif'" asp-action="GetDepartments" asp-controller="Department">Departments</a></li>
                    <li class="nav-item"><a class="nav-link" style="font-size:28px; font-family:'sans-serif'" asp-action="GetRoles" asp-controller="Role">Roles</a></li>
                    <li class="nav-item"><a class="nav-link" style="font-size:28px; font-family:'sans-serif'" asp-action="GetEmployees" asp-controller="Employee">Employees</a></li>
                    <li class="nav-item"><a class="nav-link" style="font-size: 28px; font-family: 'sans-serif'" asp-action="GetProjects" asp-controller="Project">Projects</a></li>
                </ul> 
                
                <ul class="navbar-nav m-auto">
                    @if (signInManager.IsSignedIn(User))
                    {
                    <li class="nav-item">
                        <form method="post" asp-action="Logout" asp-controller="Account">
                            <button type="submit" style="width:auto;font-family:'Times New Roman'"
                            class="nav-link btn btn-link py-0">
                        Logout @User.Identity.Name</button>
                        </form>
                    </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" style="font-size:28px; font-family:'Times New Roman'" asp-action="Login" asp-controller="Account">SignIn</a></li>
                        <li class="nav-item"><a class="nav-link" style="font-size:28px; font-family:'Times New Roman'" asp-action="Register" asp-controller="Account">Register</a></li>
                    }
                </ul>
            </div>
        </nav>

        <br />
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                @RenderBody()
            </div>
        </div>
    </div>    
</body>
</html>