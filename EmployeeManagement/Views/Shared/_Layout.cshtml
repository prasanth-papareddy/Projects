<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <link href="~/bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-sm  navbar-dark" style="background-color:darkkhaki;">
            <a class="navbar-brand" asp-action="List" asp-controller="Employee">
                <img src="~/Images/ProfileImage.png" style="width:65px;height:65px" />
            </a>
            <button class="navbar-toggler" data-toggle="collapse" type="button" data-target="#CollapseMenuBar">
                <span class="navbar navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="CollapseMenuBar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" style="font-size:28px;" asp-action="create" asp-controller="Employee">Create</a></li>
                    <li class="nav-item"><a class="nav-link" style="font-size:28px;" asp-action="List" asp-controller="Employee">List</a></li>
                </ul>                
            </div>
        </nav>

        <br />
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                @RenderBody()
            </div>
        </div>
    </div>
    @RenderSection("Scripts", required: false);
</body>
</html>