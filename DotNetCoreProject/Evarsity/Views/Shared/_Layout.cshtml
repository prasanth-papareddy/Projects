<!DOCTYPE html>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<CustomIdentityUser>  signInManager;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <title></title>
</head>
<body>
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-sm  navbar-dark" style="background-color:darkkhaki;">
            <a class="navbar-brand" asp-action="Index" asp-controller="home">
                <img src="~/Images/SRMlogo.png" style="width:65px;height:65px" />
            </a>
            <button class="navbar-toggler" data-toggle="collapse" type="button" data-target="#CollapseMenuBar">
                <span class="navbar navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="CollapseMenuBar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" style="font-size:28px;" asp-action="details" asp-controller="home">Details</a></li>
                    <li class="nav-item"><a class="nav-link" style="font-size:28px;" asp-action="create" asp-controller="home">Create</a></li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <form method="post" asp-action="Logout" asp-controller="Account">
                                <button type="submit" class="nav-link btn btn-link py-0">Logout @User.Identity.Name</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" style="font-size:28px;" asp-action="Register" asp-controller="Account">Register</a></li>
                        <li class="nav-item"><a class="nav-link" style="font-size:28px;" asp-action="Login" asp-controller="Account">Login</a></li>
                    }
                </ul>
            </div>
        </nav>

        <br />        
    </div>    
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                @RenderBody()
            </div>
        </div>
    </div>
        @RenderSection("Scripts", required: false);    
</body>
</html>